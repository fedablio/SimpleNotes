<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_fundo"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".EditarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Title" />

    <EditText
        android:id="@+id/campoTituloEditar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/campo"
        android:textCursorDrawable="@drawable/cursor"
        android:padding="5dp"
        android:textSize="18dp"
        android:ems="10"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Content" />

    <EditText
        android:id="@+id/campoConteudoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/campo"
        android:textCursorDrawable="@drawable/cursor"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_weight="0.7"
        android:ems="10"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botao"
                android:onClick="alterar"
                android:text="Alter"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/cor_texto_botao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botao"
                android:onClick="excluir"
                android:text="Delete"
                android:textSize="18dp"
                android:textColor="@color/cor_texto_botao" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>